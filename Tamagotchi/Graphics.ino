void drawGraphic(int a[16][16] , int x, int y){
  for(int i=0;i<16;i++)
  for(int j=0;j<16;j++)
  {
    if(a[i][j])
    {
      OrbitOledMoveTo(x+j,y+i);
      OrbitOledDrawPixel();
    }
  }
}

