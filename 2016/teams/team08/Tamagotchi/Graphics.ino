}

int checkPetBit(int age, int xcor, int ycor) {
  switch(age){
     case 0:
       return (egg[xcor] & 1 << (15 - ycor)) ? 1 : 0;
     case 1:
       return (baby[xcor] & 1 << (15 - ycor)) ? 1 : 0;
     case 2:
       return (teen[xcor] & 1 << (15 - ycor)) ? 1 : 0;
     case 3:
       return (adult[xcor] & 1 << (15 - ycor)) ? 1 : 0;
     case 4:
       return (senior[xcor] & 1 << (15 - ycor)) ? 1 : 0;
     default:
       return 0;
  }
}

